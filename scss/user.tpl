@include screen-lg {
    #tpl_wcf_user {
        
    .tabMenuContent > .section {
        border: 1px solid #e5e9f2 !important;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 1px 2px 0 rgb(33 33 33 / 14%), 0 0 1px 0 rgb(0 0 0 / 14%);
    }
        
    .userProfileUserWithCoverPhoto {
        border: 1px solid #e5e9f2 !important;
        border-top: 3px solid #FFE6C7 !important;
